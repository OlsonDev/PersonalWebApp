@model PersonalWebApp.Models.Conceptual.BlogEntry
<div class="container">
	<div class="row">
		<form id="blog-form" class="card col s12">
			<input type="hidden" name="entryId" value="@Model.EntryId"/>

			<div class="card-content">
				<div class="row">
					<div class="input-field col s6">
						<input id="title" name="title" class="validate" type="text" value="@Model.Title">
						<label for="title">Title</label>
					</div>
					<div class="input-field col s6">
						<input id="slug" name="slug" class="validate" type="text" value="@Model.Slug">
						<label for="slug">Slug</label>
					</div>
				</div>

				<div class="row">
					<div class="input-field col s12">
						<textarea id="markdown-content" name="markdownContent" class="materialize-textarea validate">@Model.MarkdownContent</textarea>
						<label for="markdown-content">Content</label>
					</div>
				</div>

				<div class="row buttons">
					<div id="signin"></div>
					<button class="btn waves-effect waves-light" hidden type="submit" id="save-button">Save</button>
					<button class="btn waves-effect waves-light" hidden type="button" id="update-preview-button">Update preview</button>
				</div>
			</div>
		</form>
	</div>
</div>
